# Variables de entorno para el backend
NODE_ENV=development
PORT=3001

# Configuración de MongoDB
MONGODB_URI=mongodb://mongo:27017/appointments

# Configuración de Email 
# NOTA: La configuración de email está hardcodeada en src/services/emailService.ts
# No necesitas configurar EMAIL_USER ni EMAIL_PASS aquí
# EMAIL_USER=tu-email@gmail.com
# EMAIL_PASS=tu-password-de-aplicacion

# URL del frontend para CORS (en Docker será http://frontend:3000)
FRONTEND_URL=http://localhost:3000

# Configuración adicional para WhatsApp
CHROME_EXECUTABLE_PATH=/usr/bin/chromium
